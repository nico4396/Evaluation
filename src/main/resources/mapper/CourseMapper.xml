<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace目前可以自定义要唯一，将来面向接口编程时对应dao接口，一 个mapper相当于一个dao接口的实现类 -->
<mapper namespace="com.jxd.dao.ICourseDao">
    <delete id="deleteCourseByid">
        delete from course where couid=#{couid}
    </delete>
    <insert id="addCourses">
        insert into course(couname) values (#{couname})
    </insert>
    <select id="getAllCourse" resultType="Course">
        select couid,couname from course
        <where>
            <if test="couname != null and couname !=''">
                couname like '%' #{couname} '%'
            </if>
        </where>
    </select>
    <select id="getAllCourses" resultType="Course">
        select couid,couname from course
        <where>
            <if test="couname != null and couname !=''">
                couname like '%' #{couname} '%'
            </if>
        </where>
        limit #{page},#{limit}
    </select>
</mapper>